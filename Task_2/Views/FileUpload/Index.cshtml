@model List<Task_2.Models.FileRecord> //Представление страницы со списком загруженных файлов
@{
    ViewData["Title"] = "List of Files";
}

<h2 style="text-align:center">Загруженные файлы</h2>
<form asp-action="UploadFile" enctype="multipart/form-data" method="post">
    <input type="file" name="file" />
    <button type="submit">Загрузить</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя файла</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileId</td>
                <td>@file.FileName</td>
                <td>
                    <a asp-action="ViewFile" asp-route-id="@file.FileId">Посмотреть содержимое</a>
                </td>
            </tr>
        }
    </tbody>
</table>
